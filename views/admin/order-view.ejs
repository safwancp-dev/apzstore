<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Order Details - Admin</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>

  <style>
    body {
      background-color: #212529;
      color: #f8f9fa;
    }
    .section {
      padding: 30px 15px;
    }
    .order-card {
      background-color: #343a40;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.15);
      padding: 20px;
    }
    .order-label {
      font-weight: 600;
      color: #adb5bd;
    }
    .order-value {
      color: #ffffff;
    }
    .product-item {
      display: flex;
      align-items: center;
      border-bottom: 1px solid #495057;
      padding: 10px 0;
    }
    .product-item:last-child {
      border-bottom: none;
    }
    .product-item img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 8px;
      margin-right: 15px;
    }
    .product-info p {
      margin: 0;
      font-size: 0.95rem;
    }
    .badge-status {
      font-size: 0.85rem;
    }
    .wrapper {
      max-width: 800px;
      margin: 0 auto;
    }
  </style>
</head>
<body class="min-vh-100">

  <div class="container-fluid section wrapper">
    <h3 class="mb-4 text-white fw-bold text-center">Order Details</h3>

    <div class="order-card">
      <p><span class="order-label">Order ID:</span> <span class="order-value"><%= orders._id %></span></p>
      <p><span class="order-label">User:</span> <span class="order-value"><%= orders.user.fullName %> <%= orders.user.email %></span></p>
      <p>
        <span class="order-label">Status:</span>
        <span class="badge bg-info text-dark badge-status"><%= orders.status %></span>
      </p>
      <p>
        <span class="order-label">payment Status:</span>
        <span class="badge bg-info text-dark badge-status"><%= orders.paymentStatus %></span>
      </p>
      <p><span class="order-label">Total Amount:</span> <span class="order-value">₹<%= orders.totalAmount %></span></p>
      <p><span class="order-label">Order Date:</span> <span class="order-value"><%= orders.createdAt.toDateString() %></span></p>

      <h5 class="mt-4 mb-3 text-white border-bottom pb-2">Items</h5>

      <% orders.items.forEach(item => { %>
        <div class="product-item">
          <img src="<%= item.product.image[0] %>" alt="<%= item.product.fullName %>">
          <div class="product-info text-white">
            <p><strong><%= item.product.fullName %></strong></p>
            <p>Price: ₹<%= item.product.price %></p>
            <p>Qty: <%= item.quantity %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
